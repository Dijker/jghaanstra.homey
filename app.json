{
	"id": "jghaanstra.homey",
	"name": {
		"en": "My Homey App",
		"nl": "Mijn Homey App"
	},
	"version": "1.1.0",
	"compatibility": "0.x || 1.x",
	"author": {
		"name": "Jelger Haanstra",
		"email": "homey@solidewebservices.com"
	},
	"category": "appliances",
	"description": {
		"en": "My Homey App",
		"nl": "Mijn Homey App"
	},
	"dependencies": {
		"net": "*"
	},
	"permissions": [
		"homey:manager:ledring",
		"homey:manager:speech-output"
	],
    "drivers": [
		{
			"id": "mi-robot",
			"name": {
				"en": "Mi Robot Vacuum Cleaner",
				"nl": "Mi Robot Stofzuiger"
			},
			"images": {
				"large": "drivers/mi-robot/assets/images/large.jpg",
				"small": "drivers/mi-robot/assets/images/small.jpg"
			},
			"class": "other",
			"capabilities": [],
			"pair": [
				{
					"id": "start"
				}
			],
			"settings": [
			    {
                    "type": "group",
                    "label": {
                        "en": "Mi Robot settings",
						"nl": "Mi Robot instellingen"
                    },
					"children": [
				        {
				            "id": "address",
				            "type": "text",
				            "value": "0.0.0.0",
				            "label": {
				                "en": "IP Address",
				                "nl": "IP Adres"
				            }
				        },
				        {
					        "id": "start",
					        "type": "text",
					        "value": "",
					        "label": {
						        "en": "HEX value to start Mi Robot",
						        "nl": "HEX waarde om Mi Robot te starten"
					        }
				        },
                        {
					        "id": "pause",
					        "type": "text",
					        "value": "",
					        "label": {
						        "en": "HEX value to pause Mi Robot",
						        "nl": "HEX waarde om Mi Robot te pauzeren"
					        }
				        },
                        {
					        "id": "home",
					        "type": "text",
					        "value": "",
					        "label": {
						        "en": "HEX value to send Mi Robot home",
						        "nl": "HEX waarde om Mi Robot naar huis te sturen"
					        }
				        },
                        {
					        "id": "find",
					        "type": "text",
					        "value": "",
					        "label": {
						        "en": "HEX value to find Mi Robot",
						        "nl": "HEX waarde om Mi Robot te vinden"
					        }
				        }
		            ]
		        }
		    ]
		}
	],
	"flow": {
		"actions": [
			{
				"id":"say_parsed_text",
				"title":{
					"en":"Say parsed text",
					"nl":"Spreek verrijkte text"
				},
				"args": [
					{
						"name": "text",
						"type": "text"
					}
				]
			},
            {
				"id": "startCleaning",
				"title": {
					"en": "Start vacuum cleaning",
					"nl": "Start stofzuigen"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"placeholder": {
							"en": "Select Mi Robot",
							"nl": "Selecteer Mi Robot"
						},
						"filter": "driver_id=mi-robot"
					}
				]
			},
			{
				"id": "stopCleaning",
				"title": {
					"en": "Stop vacuum cleaning",
					"nl": "Stop stofzuigen"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
                        "placeholder": {
							"en": "Select Mi Robot",
							"nl": "Selecteer Mi Robot"
						},
						"filter": "driver_id=mi-robot"
					}
				]
			},
			{
				"id": "goHomeMiRobot",
				"title": {
					"en": "Send Mi Robot home",
					"nl": "Stuur Mi Robot naar huis"
				},
				"args": [
					  {
						"name": "device",
						"type": "device",
                        "placeholder": {
							"en": "Select Mi Robot",
							"nl": "Selecteer Mi Robot"
						},
						"filter": "driver_id=mi-robot"
					  }
				]
			},
            {
				"id": "findMiRobot",
				"title": {
					"en": "Find Mi Robot",
					"nl": "Vind Mi Robot"
				},
				"args": [
					  {
						"name": "device",
						"type": "device",
                        "placeholder": {
							"en": "Select Mi Robot",
							"nl": "Selecteer Mi Robot"
						},
						"filter": "driver_id=mi-robot"
					  }
				]
			}
		]
	},
	"screensavers": [
		{
			"name": "led_swirl_green",
			"title": {
				"en": "Swirl - Green",
				"nl": "Swirl - Groen"
			}
		},
		{
			"name": "led_swirl_colorflow",
			"title": {
				"en": "Swirl - Colorflow",
				"nl": "Swirl - Colorflow"
			}
		},
		{
			"name": "led_rain",
			"title": {
				"en": "Pooring Rain",
				"nl": "Stromende Regen"
			}
		}
	]
}
