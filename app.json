{
	"id": "jghaanstra.homey",
	"name": {
		"en": "My Homey App",
		"nl": "Mijn Homey App"
	},
	"version": "1.2.1",
	"compatibility": "0.x || 1.x",
	"author": {
		"name": "Jelger Haanstra",
		"email": "homey@solidewebservices.com"
	},
	"category": "appliances",
	"description": {
		"en": "My Homey App",
		"nl": "Mijn Homey App"
	},
	"dependencies": {
		"net": "*"
	},
	"permissions": [
		"homey:manager:ledring",
		"homey:manager:speech-input",
		"homey:manager:speech-output"
	],
	"flow": {
		"actions": [
			{
				"id": "say_parsed_text",
				"title": {
					"en":"Say parsed text",
					"nl":"Spreek verrijkte text"
				},
				"args": [
					{
						"name": "text",
						"type": "text"
					}
				]
			}
		]
	},
	"speech": [
		{
			"id": "echo",
			"importance": 1,
			"triggers": {
				"en": [ "echo", "repeat", "parrot" ],
				"nl": [ "echo", "herhaal", "herhalen", "papegaai", "napraten", "praat na", "praat mij na" ]
			}
		}
	],
	"screensavers": [
        {
	        "name": "led_red_blue_alert",
	        "title": {
	            "en": "Alert - Red & Blue",
	            "nl": "Alarm - Rood & Blauw"
	        }
	    },
        {
	        "name": "led_eyes_red",
	        "title": {
	            "en": "Eyes - Red",
	            "nl": "Ogen - Rood"
	        }
	    },
        {
	        "name": "led_flash_red",
	        "title": {
	            "en": "Flash - Red",
	            "nl": "Flits - Rood"
	        }
	    },
        {
			"name": "led_swirl_green",
			"title": {
				"en": "Swirl - Green",
				"nl": "Swirl - Groen"
			}
		},
		{
			"name": "led_swirl_colorflow",
			"title": {
				"en": "Swirl - Colorflow",
				"nl": "Swirl - Colorflow"
			}
		},
		{
			"name": "led_rain",
			"title": {
				"en": "Pooring Rain",
				"nl": "Stromende Regen"
			}
		}
	]
}
