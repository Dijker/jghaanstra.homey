{
	"id": "jghaanstra.homey",
  "sdk": 2,
	"name": {
		"en": "Owney App",
		"nl": "Owney App"
	},
	"version": "2.1.0",
	"compatibility": "0.x || 1.x",
	"author": {
		"name": "Jelger Haanstra",
		"email": "homey@solidewebservices.com"
	},
	"category": "appliances",
	"description": {
		"en": "My Homey App",
		"nl": "Mijn Homey App"
	},
	"dependencies": {
		"net": "*"
	},
	"permissions": [
		"homey:manager:ledring",
		"homey:manager:speech-input",
		"homey:manager:speech-output"
	],
	"flow": {
		"actions": [
			{
				"id": "say_parsed_text",
				"title": {
					"en":"Say parsed text",
					"nl":"Spreek verrijkte text"
				},
				"args": [
					{
						"name": "text",
						"type": "text"
					}
				]
			}
		]
	},
  "speech": {
    "en": {
      "element": {
        "echo": {
          "type": "regex",
          "value": "(echo|repeat|parrot)"
        }
      },
      "group": {
        "main": {
          "set": "echo",
          "ordered": false,
          "allowDisconnect": false,
          "capturingGroup": true
        }
      }
    },
    "nl": {
      "element": {
        "echo": {
          "type": "regex",
          "value": "(echo|herhaal|herhalen|papegaai|napraten|praat na|praat mij na)"
        }
      }
    }
  },
  "speechExamples": {
    "en": ["Repeat after me"],
    "nl": ["Herhaal mij"]
  },
	"screensavers": [
    {
	    "name": "led_red_blue_alert",
	    "title": {
	      "en": "Alert - Red & Blue",
	      "nl": "Alarm - Rood & Blauw"
	    }
	  },
    {
	    "name": "led_eyes_red",
	    "title": {
	      "en": "Eyes - Red",
	      "nl": "Ogen - Rood"
	    }
	  },
    {
	    "name": "led_flash_red",
	    "title": {
	      "en": "Flash - Red",
	      "nl": "Flits - Rood"
	    }
	  },
    {
			"name": "led_swirl_green",
			"title": {
				"en": "Swirl - Green",
				"nl": "Swirl - Groen"
			}
		},
		{
			"name": "led_swirl_colorflow",
			"title": {
				"en": "Swirl - Colorflow",
				"nl": "Swirl - Colorflow"
			}
		},
		{
			"name": "led_rain",
			"title": {
				"en": "Pooring Rain",
				"nl": "Stromende Regen"
			}
		}
	]
}
